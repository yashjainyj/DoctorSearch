<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/background1">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/ss">

                    <FrameLayout
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/doctor1"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="80dp"
                            android:text="Mr."
                            android:layout_marginTop="10dp"
                            android:textColor="?attr/actionModeSplitBackground"
                            android:textSize="25dp"
                            android:textStyle="bold" />
                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/phone"
                            android:id="@+id/phone12"
                            android:background="@null"
                            android:layout_marginStart="260dp"
                            android:layout_marginTop="45dp"/>

                        <TextView
                            android:id="@+id/name6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="120dp"
                            android:text="name"
                            android:layout_marginTop="10dp"
                            android:textColor="?attr/actionModeSplitBackground"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="special"
                            android:layout_marginTop="50dp"
                            android:textSize="20dp"
                            android:id="@+id/age"
                            android:layout_marginStart="80dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..............................................................................."
                            android:layout_marginTop="70dp"
                            />
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp" android:src="@drawable/file"
                            android:layout_marginTop="90dp"
                            android:layout_marginStart="10dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="skjnfsdlknlsdflsdm"
                            android:textSize="20dp"
                            android:id="@+id/time"
                            android:layout_marginStart="70dp"
                            android:layout_marginTop="90dp"/>
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp" android:src="@drawable/clock1"
                            android:layout_marginTop="150dp"
                            android:layout_marginStart="10dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Every Day"
                            android:textSize="20dp"
                            android:id="@+id/date"
                            android:layout_marginStart="70dp"
                            android:layout_marginTop="150dp"
                            android:layout_marginBottom="10dp"/>
                    </FrameLayout>
                </RelativeLayout>
    </ScrollView>
</RelativeLayout>