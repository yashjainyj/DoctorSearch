<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/background1">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="118dp"
                android:layout_height="113dp"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="-92dp"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/user" />
            <TextView
                android:id="@+id/p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="200dp"
                android:layout_below="@id/imageView2"
                android:text="Name"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/editText4"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginStart="45dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:background="@drawable/edit_text"
                android:focusable="false"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:layout_below="@+id/p"
                android:hint="Name"
                android:inputType="textPersonName"
                android:text="" />

            <TextView
                android:id="@+id/p1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/editText4"
                android:text="Address"
                android:textSize="20dp" />
            <EditText
                android:id="@+id/editText2"
                android:layout_marginStart="35dp"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:focusable="false"
                android:background="@drawable/edit_text"
                android:hint="Address"
                android:inputType="number"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/p1"/>
            <TextView
                android:id="@+id/p2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/editText2"
                android:text="Gender"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/gender"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:focusable="false"
                android:textAlignment="center"
                android:background="@drawable/edit_text"
                android:layout_marginTop="10dp"
                android:hint="gender"
                android:layout_marginStart="35dp"
                android:layout_below="@+id/p2"
                />
            <TextView
                android:id="@+id/p3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/gender"
                android:text="Mobile"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:background="@drawable/edit_text"
                android:focusable="false"
                android:layout_marginStart="35dp"
                android:layout_below="@+id/p3"
                android:hint="Phone number"
                android:layout_marginTop="10dp"
                android:inputType="number|phone" />


            <TextView
                android:id="@+id/p4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/editText3"
                android:text="Fee"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/fee1"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:background="@drawable/edit_text"
                android:focusable="false"
                android:layout_marginStart="35dp"
                android:layout_below="@+id/p4"
                android:hint="Fee"
                android:layout_marginTop="10dp"
                android:inputType="number|phone" />


            <TextView
                android:id="@+id/p5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/fee1"
                android:text="specialization"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/special1"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:background="@drawable/edit_text"
                android:focusable="false"
                android:layout_marginStart="35dp"
                android:layout_below="@+id/p5"
                android:hint="specialization"
                android:layout_marginTop="10dp"
                android:inputType="number|phone" />
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>